<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.rinswash2.LaundryController">

    <!-- Form Input -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" padding="10">
            <children>
                <Label text="Nama"/>
                <TextField fx:id="tfNama" prefWidth="120"/>
                <Label text="Layanan"/>
                <ComboBox fx:id="cbLayanan" prefWidth="100"/>
                <Label text="Masuk"/>
                <DatePicker fx:id="dpTMasuk"/>
                <Label text="Selesai"/>
                <DatePicker fx:id="dpTSelesai"/>
                <Label text="Berat (kg)"/>
                <TextField fx:id="tfBerat" prefWidth="60"/>
                <Button fx:id="btnAdd" text="Tambah" onAction="#tambah"/>
                <Button fx:id="btnUpdate" text="Update" onAction="#update"/>
                <Button fx:id="btnAmbil" text="Ambil" onAction="#ambilLaundry"/>
                <Button fx:id="btnLaporan" text="Laporan" onAction="#showLaporan"/>
            </children>
        </HBox>
    </top>

    <!-- Main Content: Table and Report -->
    <center>
        <HBox spacing="30" alignment="TOP_LEFT" padding="10">
            <children>
                <!-- TableView -->
                <TableView fx:id="table" prefWidth="400">
                    <columns>
                        <TableColumn fx:id="colNama" text="Nama"/>
                        <TableColumn fx:id="colLayanan" text="Layanan"/>
                        <TableColumn fx:id="colMasuk" text="Masuk"/>
                        <TableColumn fx:id="colSelesai" text="Selesai"/>
                        <TableColumn fx:id="colBerat" text="Berat"/>
                    </columns>
                </TableView>
                <!-- Report Box -->
                <VBox fx:id="laporanBox" spacing="10" alignment="TOP_LEFT" prefWidth="200" padding="24,18,24,18">
                    <children>
                        <Label fx:id="lblJudul" text="Transaksi Aktif"/>
                        <Label fx:id="lblTotalTransaksi" text="Total Transaksi: 0"/>
                        <Label fx:id="lblTotalBerat" text="Total Berat: 0 kg"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>